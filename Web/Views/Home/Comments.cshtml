                                        <h5><a href="">@comment.Author</a> <a href="#" class="reply" style="color: #14274E"><i class="bi bi-reply-fill"></i> Reply</a></h5>
                                        <time datetime="@comment.DatePosted.ToString("yyyy-MM-dd")">@comment.DatePosted.ToString("dd MMM, yyyy")</time>

                                        <p>
                                            @comment.Text
                                        </p>
                                    </div>
                                </div>
                            </div>}
