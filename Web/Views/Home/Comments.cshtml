                    <article class="entry entry-single">

                        <div class="entry-img">
                            <!-- <img src="~/assets/img/blog/blog-1.jpg" alt="" class="img-fluid"> -->
                        </div>

                        <h2 class="entry-title">
                            <a href="@Model.link">@Model.ResearchName</a>
                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a >@Model.owner</a></li>
                                <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a ><time datetime="2020-01-01">@Model.year</time></a></li>
                                <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a asp-action="Comments" asp-controller="Home">Comments</a></li>
                            </ul>
                        </div>

                        <div class="entry-content">
                            <p>
                                @Model.Discription
                            </p>

                          

                    </article><!-- End blog entry -->

                   

                    <div class="blog-comments">

                        <h4 class="comments-count">@Model.comments.Count Comments</h4>

