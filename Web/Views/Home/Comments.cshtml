<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Publications" asp-controller="Home">Publications</a></li>
            </ol>

            <h2>
                @Model.ResearchName
            </h2>
        </div>
    </section><!-- End Breadcrumbs -->
