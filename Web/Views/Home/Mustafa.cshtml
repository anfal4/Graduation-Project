@model HomeViewModel

<head>
    <!-- Vendor CSS Files -->
    <link href="~/profile/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/profile/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/profile/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/profile/assets/css/about.css" rel="stylesheet">



</head>

<body>

    <!-- ======= About Section ======= -->
    <section id="about" class="about-mf sect-pt4 route" style="background-color: #9BA4B4;">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="box-shadow-full">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-sm-6 col-md-5">
                                        <div class="about-img">
                                            <img src="../assets/img/team/mustafa2.jpg" class="img-fluid rounded b-shadow-a" alt="">
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-7">
                                        <div class="about-info">
                                            <p><span class="title-s">Name: </span> <span>Mustafa Kamil Mahdi</span></p>
                                            <p><span class="title-s">The field: </span> <span>Information diffusion in social networks</span></p>
                                            <p><span class="title-s">Email: </span> <span>mk3_alasadi@yahoo.com</span></p>
                                            <p><span class="title-s">Phone: </span> <span> ....</span></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="skill-mf">
                                    <p class="title-s">Skill</p>
                                    <span>HTML</span> <span class="pull-right">85%</span>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <span>CSS3</span> <span class="pull-right">75%</span>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <span>PHP</span> <span class="pull-right">50%</span>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <span>JAVASCRIPT</span> <span class="pull-right">90%</span>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="about-me pt-4 pt-md-0">
                                    <div class="title-box-2">
                                        <h5 class="title-left">
                                            About me
                                        </h5>
                                    </div>
                                    <p class="lead">
                                        <B>Education :</B>  B.Sc. Karbala University - College of Science
                                        - computer section, IRAQ (2004-2009).
                                        M.Sc. Hamdard University - Faculty of Information Technology
                                        - Science Department, India - New Delhi (2010-2012).
                                        Ph.D. University of Babylon - Faculty of Information Technology
                                        Software section, IRAQ (2017-2019).

                                    </p>
                                    <p class="lead">
                                        <B>Teaching and administrative experience</B>
                                        -	Lecturer at Sumer University - College of Administration and Economics - Department of Statistics - Course of the Department of Statistics (2014 – 2016).
                                        -	Lecturer at Sumer University - Faculty of Computer Science
                                        Information Technology - Head of Science for the year
                                        one (2015 – Now).

                                    </p>
                                    <p class="lead">
                                        <B>Scientific Publication:</B>
                                        More than nine research papers published in reputable international and local journals
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End About Section -->
    <!-- ======= Clients Section ======= -->
    <section id="clients" class="clients" style="background-color: #fff;">
        <div class="container" data-aos="fade-up">
        </div>
    </section><!-- End Clients Section -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services section-bg" style="background-color: #9BA4B4; margin-top: -90px;">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>Publications</h2>
                <p>Here is all the research I've done.</p>
            </div>
            @foreach (var research in Model.researches)
            {
                if (research.owner2 == "Dr.Mustafa Kamil Mahdi")
                {


                    <div data-aos="fade-up">

                        <div class="icon-box">
                            <div class="icon">
                                @research.year
                            </div>
                            <h4 class="title"><a asp-controller="Home" asp-action="Preview" asp-route-id="@research.Id">@research.ResearchName</a></h4>
                            <p class="description">
                                @research.Discription
                            </p>
                            <section id="blog" class="blog">
                                <div data-aos="fade-up" style="margin-left:-30px; margin-top: -23px;  color: #14274E; ">

                                    <div>

                                        <div>

                                            <article class="entry entry-single" style="box-shadow: none;">

                                                <div class="entry-meta">
                                                    <ul>
                                                        <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a asp-action="Mustafa" asp-controller="Home">Dr.Mustafa Kamil Mahdi</a></li>
                                                        <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href=""><time datetime="2020-01-01">@research.year</time></a></li>
                                                        <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="">@research.reads Reads</a></li>
                                                    </ul>
                                                </div>
                                            </article>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                    <br />

                }
            }
        </div>

    </section>
    <!-- ======= Clients Section ======= -->
    <section id="clients" class="clients" style="background-color: #fff;">
        <div class="container" data-aos="fade-up">
        </div>
    </section><!-- End Clients Section -->
</body>